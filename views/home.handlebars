    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Ra√ßa</th>
            <th>Battletag</th>
        </tr>
    </thead>
{{#each players as | player |}}

    <tr>
        <td>{{player.dataValues.id}}</td>
        <td>{{player.dataValues.name}}</td>
        <td>{{player.dataValues.email}}</td>
